	"item": [
		{
			"name": "UploadBook",
			"item": [
				{
					"name": "SuccessUpload",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const fileName=\"Flask Web Development.pdf\"\r",
									"const FILE = `bookTests/${fileName}`;\r",
									"const USER_ID = \"5\";\r",
									"\r",
									"pm.request.body = {\r",
									"    mode: 'formdata',\r",
									"    formdata: [\r",
									"        {\r",
									"            key: 'user_id',\r",
									"            value: USER_ID,\r",
									"            type: 'text'\r",
									"        },\r",
									"        {\r",
									"            key: 'file',\r",
									"            type: 'file',\r",
									"            src: FILE\r",
									"        }\r",
									"    ]\r",
									"};\r",
									"\r",
									"if (!pm.request.url || pm.request.url.toString().includes('postman.com')) {\r",
									"    const baseUrl = pm.environment.get('base_url') || 'http://localhost:5000';\r",
									"    pm.request.url = baseUrl + '/api/books/upload';\r",
									"}\r",
									"\r",
									"pm.request.method = 'POST';\r",
									"\r",
									"pm.request.headers.upsert({\r",
									"    key: 'Content-Type',\r",
									"    value: 'multipart/form-data'\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();\r",
									"\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": []
						},
						"url": {
							"raw": "{{base_url}}/books/upload",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"books",
								"upload"
							]
						}
					},
					"response": []
				}
			]
		},
